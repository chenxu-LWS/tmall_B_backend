<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loveunited.tmall_b_backend.mapper.CustomerMapper">
    <select id="queryCustomerById" resultType="Customer">
        select * from customer where id=#{id}
    </select>

    <select id="queryCustomerList" resultType="Customer">
        select * from customer
    </select>

    <select id="queryCustomerByName" resultType="Customer">
        select * from customer where cust_name = #{name} limit 1
    </select>

    <select id="queryCustomerByNameAndPass" resultType="Customer">
        select * from customer where cust_name = #{name} and password = #{password}
    </select>

    <insert id="insertCustomer">
        insert into customer (id, cust_name, password) values (null, #{name}, #{password})
    </insert>
</mapper>